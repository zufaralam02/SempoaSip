<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdb17e"
    android:orientation="vertical"
    tools:context="com.zufaralam02.sempoasip.Parent.LoginRegister.Activities.Login">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_header_login" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/orange_edit_text"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_med">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_name" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtEmailLogin"
                            style="@style/textRegular"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:background="@color/transparent"
                            android:lines="1" />

                    </LinearLayout>

                    <TextView
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_med"
                        android:text="Password" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/orange_edit_text"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_med">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_password" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtPassLogin"
                            style="@style/textRegular"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:background="@color/transparent"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:maxLines="1" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_med"
                        android:text="FORGOT PASSWORD?"
                        android:textColor="#fdb17e" />

                    <Button
                        android:id="@+id/btnLoginLogin"
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_med"
                        android:layout_marginTop="@dimen/margin_med"
                        android:background="@drawable/rectangle_orange_button"
                        android:text="LOGIN"
                        android:textColor="#fff" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btnRegisterLogin"
                style="@style/textRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/rectangle_white_button"
                android:text="REGISTER (PARENTS ONLY)"
                android:textColor="#fdb17e" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
