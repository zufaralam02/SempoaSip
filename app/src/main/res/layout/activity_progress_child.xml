                            android:text="Page 9" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dedede" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_vertical_margin">

                        <TextView
                            style="@style/textRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/ivArrow3"
                            android:layout_alignTop="@id/ivArrow3"
                            android:gravity="center_vertical"
                            android:text="12 Agustus 2017" />

                        <TextView
                            style="@style/textRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/ivArrow3"
                            android:layout_alignTop="@id/ivArrow3"
                            android:layout_marginRight="@dimen/margin_med"
                            android:layout_toLeftOf="@id/ivArrow3"
                            android:gravity="center_vertical"
                            android:text="FEEDBACK"
                            android:textColor="#fdb17e" />

                        <ImageView
                            android:id="@+id/ivArrow3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_arrow_home_parent" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
