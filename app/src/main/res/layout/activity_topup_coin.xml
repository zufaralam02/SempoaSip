<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ed1fc"
    android:orientation="vertical"
    tools:context="com.zufaralam02.sempoasip.Parent.Wallet.Activities.TopupCoin">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/back_navigation" />

            <HorizontalScrollView
                android:id="@+id/scrollViewTopup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#66b3e4"
                android:clipToPadding="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llWeeklyChallenge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvWeeklyChallenge"
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100 Coin"
                                android:textColor="#fff" />

                            <TextView
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weekly Challenge"
                                android:textColor="#fff" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llNationalChallenge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvNationalChallenge"
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200 Coin"
                                android:textColor="#fff" />

                            <TextView
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="National Challenge"
                                android:textColor="#fff" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llRegionalChallenge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvRegionalChallenge"
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150 Coin"
                                android:textColor="#fff" />

                            <TextView
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Regional Challenge"
                                android:textColor="#fff" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSouvenirSempoa1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSouvenirSempoa1"
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="250 Coin"
                                android:textColor="#fff" />

                            <TextView
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Souvenir Sempoa"
                                android:textColor="#fff" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llSouvenirSempoa2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSouvenirSempoa2"
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300 Coin"
                                android:textColor="#fff" />

                            <TextView
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Souvenir Sempoa"
                                android:textColor="#fff" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSouvenirSempoa3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSouvenirSempoa3"
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="350 Coin"
                                android:textColor="#fff" />

                            <TextView
                                style="@style/textRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Souvenir Sempoa"
                                android:textColor="#fff" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_vertical_margin">

                    <TextView
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ammount To Buy" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/blue_edit_text"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_med">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_wallet_blue" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtAmountToBuy"
                            style="@style/textRegular"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:background="@color/transparent"
                            android:lines="1" />

                    </LinearLayout>

                    <TextView
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Send To" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/blue_edit_text"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_med">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_name_blue" />

                        <android.support.design.widget.TextInputEditText
                            style="@style/textRegular"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:background="@color/transparent"
                            android:lines="1" />

                    </LinearLayout>

                    <TextView
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Payment Method" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/blue_edit_text"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_med">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_payment_method_blue" />

                        <android.support.design.widget.TextInputEditText
                            style="@style/textRegular"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:background="@color/transparent"
                            android:lines="1" />

                    </LinearLayout>

                    <TextView
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Price" />

                    <TextView
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 250.000"
                        android:textColor="#8ed1fc"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/btnPayNow"
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@drawable/rectangle_blue_button"
                        android:text="PAY NOW"
                        android:textColor="#fff" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
