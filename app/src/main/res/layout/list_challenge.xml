<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewChallenge"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/layout_challenge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tvChallengeJudul"
                style="@style/textRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_big"
                android:text="Weekly Challange #1"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvChallengeKeterangan"
                style="@style/textRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvChallengeJudul"
                android:text="Now Open"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvChallengeHistory"
                style="@style/textRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnChallengeJoin"
                android:layout_alignTop="@+id/btnChallengeJoin"
                android:gravity="center"
                android:text="HISTORY"
                android:textColor="#8ed1fc" />

            <Button
                android:id="@+id/btnChallengeJoin"
                style="@style/textRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/rectangle_blue_button"
                android:paddingBottom="5dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="5dp"
                android:text="JOIN"
                android:textColor="#fff" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>