<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33a86c"
    android:orientation="vertical"
    tools:context=".Student.Journey.Activities.StageJourney">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/back_navigation" />

        <TextView
            android:id="@+id/tvCountDownTimer"
            style="@style/textRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <EditText
                        android:id="@+id/edtStegeJourney"
                        style="@style/textRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btnDelete"
                        android:enabled="false"
                        android:hint="0"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textColor="#33a86c"
                        android:textColorHint="#33a86c"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnDelete"
                        style="@style/textRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:text="DELETE"
                        android:textColor="#33a86c"
                        android:textSize="15sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnOne"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_button"
                            android:text="1"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />

                        <Button
                            android:id="@+id/btnFour"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/circle_button"
                            android:text="4"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />

                        <Button
                            android:id="@+id/btnSeven"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/circle_button"
                            android:text="7"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnTwo"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_button"
                            android:text="2"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />

                        <Button
                            android:id="@+id/btnFive"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/circle_button"
                            android:text="5"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />

                        <Button
                            android:id="@+id/btnEight"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/circle_button"
                            android:text="8"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />

                        <Button
                            android:id="@+id/btnZero"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/circle_button"
                            android:text="0"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnThree"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_button"
                            android:text="3"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />

                        <Button
                            android:id="@+id/btnSix"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/circle_button"
                            android:text="6"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />

                        <Button
                            android:id="@+id/btnNine"
                            style="@style/textRegular"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/circle_button"
                            android:text="9"
                            android:textColor="#fff"
                            android:textSize="@dimen/button_numpad" />

                        <Button
                            android:id="@+id/btnStageNext"
                            style="@style/textRegular"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@color/transparent"
                            android:text="NEXT"
                            android:textColor="#33a86c"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
